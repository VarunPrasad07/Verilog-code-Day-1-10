module ripple( 
input a,b,
input cin,
output sum,
output carry 
);
assign sum=a^b^cin;
assign carry=(a&b)|(b&cin)|(cin&a);
endmodule 
module ripple1(
input [3:0]a,b,
input c,
output [3:0]s,
output cout
);
wire c1,c2,c3;
ripple r1(.a(a[0]),.b(b[0]),.cin(c),.sum(s[0]),.carry(c1));
ripple r2(.a(a[1]),.b(b[1]),.cin(c1),.sum(s[1]),.carry(c2));
ripple r3(.a(a[2]),.b(b[2]),.cin(c2),.sum(s[2]),.carry(c3));
ripple r4(.a(a[3]),.b(b[3]),.cin(c3),.sum(s[3]),.carry(cout));
endmodule 

